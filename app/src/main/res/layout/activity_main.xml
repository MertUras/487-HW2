<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/american">


 <TextView
     android:id="@+id/choose"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_margin="50dp"
     android:gravity="center"
     android:textStyle="bold"
     android:textColor="@color/white"
     android:text="@string/choose"
     android:textSize="35dp"/>

 <Spinner
     android:id="@+id/spinner_teams"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_centerInParent="true"
     android:layout_margin="10dp"
     android:layout_marginStart="10dp"
     android:background="#1E06FD"
     android:layout_marginTop="10dp"
     android:layout_marginEnd="10dp"
     android:layout_marginBottom="10dp"
     android:drawablePadding="20dp"
     android:textColor="#000000"
     android:textColorHint="@color/black" />
 <Button
     android:id="@+id/regBtn"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:text="@string/Subscribe"
     android:layout_margin="10dp"
     android:layout_below="@id/spinner_teams"
     android:background="#FF1E06FD"
     android:drawablePadding="20dp"
     android:textColorHint="@color/white"

  />

 <Button
     android:id="@+id/gestureBtn"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@+id/regBtn"
     android:text="Configure Touch Gesture"
     android:textStyle="bold"
     android:layout_margin="10dp"
     android:background="#FF1E06FD"
     />

 <Button
     android:id="@+id/dialog_btn"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@+id/gestureBtn"
     android:layout_marginStart="10dp"
     android:layout_marginTop="10dp"
     android:layout_marginEnd="10dp"
     android:layout_marginBottom="10dp"
     android:background="#FF1E06FD"
     android:text="Show Dialog"
     android:textStyle="bold" />




</RelativeLayout>